<WordListScreen@BoxLayout>:
    BoxLayout:
        orientation: "vertical"
        WordListView:
            id: word_list
            size_hint_y: 9
        Button:
            text: "Back"
            size_hint_y: 1
            on_press: root.manager.current = "SETTINGS"


<WordListView>:
    viewclass: 'WordLabel'
    RecycleBoxLayout:
        data: self.data
        # default_size: None, dp(60)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        padding: 10,30
        spacing: 0,30

<WordLabel@GridLayout>:
    cols: 3
    arabic: ""
    pronunciation: ""
    english: ""
    topic: ""
    enabled: True
    comment: ""
    type: ""
    index: 0
    padding: 0,30
    spacing: 0,30
    canvas.before:
        Color:
            rgba: (0,0,0,1) if root.index%2==1 else (0.1,0.1,0.1,1)
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: root.arabic
        font_name: "arial"
        font_size: dp(50)
        color: (1,1,1,1) if root.enabled else (1,1,1,0.7)
        text_size : self.width, None
        size_hint_x: 5
    Label:
        text: root.english
        color: (1,1,1,1) if root.enabled else (1,1,1,0.7)
        text_size : self.width, None
        font_name: "arial"
        font_size: dp(20)
        size_hint_x: 3
    Label:
        text: root.comment
        color: (1,1,1,1) if root.enabled else (1,1,1,0.7)
        text_size : self.width, None
        font_name: "arial"
        font_size: dp(10)
        size_hint_x: 2
    Label:
        text: root.pronunciation if app.root.get_screen('SETTINGS').pronunciation else ""
        color: (1,1,1,1) if root.enabled else (1,1,1,0.7)
        text_size : self.width, None
        font_name: "arial"
        font_size: dp(20)
    Label:
        text: "Topic: " + root.topic if app.root.get_screen('SETTINGS').pronunciation else ""
        color: (1,1,1,1) if root.enabled else (1,1,1,0.7)
        text_size : self.width, None
        font_name: "arial"
        font_size: dp(10)
    Label: